<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnSendBroadCast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="22dp"
        android:text="@string/send_broadcast" />

    <Button
        android:id="@+id/btnRegBC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSendBroadCast"
        android:layout_below="@+id/btnSendBroadCast"
        android:layout_marginTop="40dp"
        android:text="@string/reg_boardcast" />

    <Button
        android:id="@+id/btnUnRegBC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnRegBC"
        android:layout_centerVertical="true"
        android:text="@string/unreg_boardcast" />
    
</RelativeLayout>
